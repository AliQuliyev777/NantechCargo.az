    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>

    <script>
        $('#nantech-kargo').on('keyup', '[name="ProductPrice"], [name="ProductCargoAmount"]', function () {
            let sumPrice = 0;
            let PriceSee2 = 0;
            let bankXerci = 0;
            $('[name="ProductPrice"]').each(function () {
                sumPrice += Number($(this).val())
                bankXerci += .5;
            })
            $('[name="ProductCargoAmount"]').each(function () {
                PriceSee2 += Number($(this).val())
            })
            $('#PriceSee').text(sumPrice.toFixed(2) + '$')
            $('#PriceSee2').text(PriceSee2.toFixed(2) + '$')
            $("#BankXerci").text(bankXerci.toFixed(2) + "$")
            $('#TotalSum').text((sumPrice + PriceSee2 + bankXerci).toFixed(2) + '$')
        })
