    <div class="allSexsiMelumatlar">
        <div class="rightSexsiMelummatlarMain">
            <div class="baglamalartext">
                <a href="/User/UserId">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>

        <form action="/User/SexsiMelumatlar/@Model.UserId" method="post" enctype="multipart/form-data">
            <div class=" rounded bg-white mt-5 mb-5">
                <div class="row">
                    <div class="col-md-3 border-right nnn">
                            <input type="file" name="UserPhoto" id="CoursePhotoSelect" />
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5 seleeect">

                                <img class=" mt-5 sssa"  src="/Img/@Model.UserPhoto">
                              <input type="file" name="UserPhoto" id="CoursePhotoSelect" />                
                        </div>
                    </div>
                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Profil Detallari</h4>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                        <label class="labels">Ad</label><input name="UserFirstName" type="text" class="form-control" placeholder="first name" value="@Model.UserFirstName">

                                    </div>
                                <div class="col-md-6">
                                        <label class="labels">Soyad</label><input type="text" class="form-control" placeholder="surname" name="UserLastName" value="@Model?.UserLastName">
                                </div>
                            </div>
                            <div class="row mt-3">
                                    <div class="col-md-12">
                                        <label class="labels">Date</label><input type="text" class="form-control" placeholder="" name="UserBirthDay" value="@Model?.UserBirthDay">
                                </div>
                                <div class="col-md-12">
                                        <label class="labels">E-mail</label><input type="email" class="form-control" placeholder="eMAIL" name="UserEmail" value="@Model?.UserEmail">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                        <label class="labels">Unvan</label><input type="text" class="form-control" placeholder="country" name="UserAddress" value="@Model?.UserAddress">
                                </div>
                                <div class="col-md-6">
                                        <label class="labels">Fin kod</label><input type="text" class="form-control" placeholder="state" name="UserFin" value="@Model?.UserFin">
                                </div>
                            </div>
                            <div class="mt-5 text-center">
                                <button class="btn btn-primary profile-button"
                                        type="submit"> Tesdiqle
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
