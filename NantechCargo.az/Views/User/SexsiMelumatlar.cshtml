<style>
    body{
        display:flex;
    }
        .seleeect input{
            display:none;
        }
        .seleeect img{
            width:100% !important;
        }



        .baglamalartext button {
            width: 40px;
            height: 40px;
            background-color: #fff;
            border-radius: 48px;
            border: 2px solid purple;
            transition: all 1s ease;
            transform: rotate(-0.5turn);
        }

        .baglamalartext button::after {
                content: "\279C";
                font-size: 18px;
                color: purple;
                transition: all 0.3s ease;
            }

        .baglamalartext button:hover {
                background-color: darkgrey;
                border-color: purple;
            }

        .baglamalartext button:hover::after {
                color: purple;
            }

</style>

